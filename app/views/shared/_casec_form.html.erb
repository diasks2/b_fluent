<div class="row-fluid">
<%= form_for(@casec) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="span4">
<p><label for="date"><%=t :test_date %></label></p> 
    <%= f.datepicker :c_date %>
    </div>
    </br>
<div class="span8">
    <p><label for="amount_one">CASEC Section 1:</label></p>
    <div id="slider_one"></div>
	<div id="amount_one" style="border: 0px solid #000000; color:#f6931f; font-weight:bold; background-color:transparent;" />200</div>

</div>
    </br>
<div class="span8">
<p><label for="amount_two">CASEC Section 2:</label></p>
