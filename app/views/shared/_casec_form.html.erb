</div>

    </br>
 <div class="span12">
    <%= f.hidden_field :c_one %>
    <%= f.hidden_field :c_two %>
    <%= f.hidden_field :c_three %>
    <%= f.hidden_field :c_four %>
    <%= f.submit I18n.t(:input_casec), class: "btn btn-large btn-primary" %>
</div>
<% end %>
</div>
