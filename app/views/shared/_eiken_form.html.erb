<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js"></script>

<div class="container">
	      <div class="row">
              <div class="span3">
        	    <div class="well">
                <%= image_tag("BigB2.png", alt: "BiFluent 'B' logo") %>
                </div>
              </div>
              <div class="span9">
               <div class="well">
               	 <h1>STEP 英検</h1>
                 <%= form_for(@eiken) do |f| %>
                 <%= render 'shared/error_messages', object: f.object %>
                 <div class="span3">
                   <p><label for="date"><%=t :test_date %></label></p> 
                   <%= f.datepicker :eiken_date %>
                 </div>
                 <div class="span5">
                <%= f.select :eiken_level, options_for_select([['5級', 7], ['4級', 6], ['3級', 5], ['準2級', 4], ['2級', 3], ['準1級', 2], ['1級', 1]]), :prompt => 'レベルを選んでください。' %>
                <%= f.select :eiken_result, options_for_select([['合格', true], ['不合格', false]], true) %>
                 </div>
                 <div class="center"><%= f.submit I18n.t(:input_eiken), class: "btn btn-large btn-primary" %></div>
                 <% end %>
                </div>
              </div> 
           </div>
</div>

