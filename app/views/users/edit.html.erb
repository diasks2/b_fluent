<% provide(:title, I18n.t(:settings)) %> 
<div class="container-fluid">
     <div class="row-fluid">
        <div class="span6 offset3">
            <div class="well">
                  <h1><%=t :update_profile %></h1>
  
                  <%= form_for(@user) do |f| %>
                  <%= render 'shared/error_messages', :object => f.object %>

                  <%= f.label :name %>
                  <%= f.text_field :name %>

                  <%= f.label :email %>
                  <%= f.text_field :email %>

                  <%= f.label :password %>
                  <%= f.password_field :password %>

                  <%= f.label :password_confirmation, "Confirm Password" %>
                  <%= f.password_field :password_confirmation %>

                  <%= f.submit t(:save_changes), :class => "btn btn-large btn-primary" %>
                  <% end %>

                  <%= gravatar_for @user %>
                  <a href="http://gravatar.com/emails"><%= t(:change) %></a>
                  
            </div><!--/well-->
        </div><!--/span -->
    </div><!--/row-fluid -->
</div><!--/container-fluid -->