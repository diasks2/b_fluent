<% provide(:title, I18n.t(:signup)) %>
<div class="container-fluid">
     <div class="row-fluid">
        <div class="span4">
              <div class="well">
                  <%= image_tag("signin_image.png", alt: "BiFluent Signin") %>

              </div><!--/well -->
        </div><!--/span4 -->
        <div class="span8">
          <div class="well">
              <h1><%=t :signup %></h1>
              <HR>
                  <%= form_for(@user) do |f| %>
                  <%= render 'shared/error_messages', object: f.object %>

                  <%= f.label :name %>
                  <%= f.text_field :name %>

                  <%= f.label :email %>
                  <%= f.text_field :email %>

                  <%= f.label :password %>
                  <%= f.password_field :password %>

                  <%= f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation %>

                  <%= f.submit t(:free_trial_start), :class => "btn btn-large btn-primary" %>
                <% end %>
          </div><!--/well -->
        </div><!--/span8 -->
    </div><!--/row-fluid -->
</div><!--/container-fluid -->
