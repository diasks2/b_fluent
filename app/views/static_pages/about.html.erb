        <script type="text/javascript" src="/assets/modal-video.js"></script>
        
  <script charset="utf-8" type="text/javascript">
    $(function() {
        $('.video-play').click(function() {        
            $('.my-modal').on('show', function() {
              $('.my-modal').html($('#modal-contents').html());
            }).on('hidden', function() {
              $('.my-modal').html('');
            }).modal({
                backdrop: true,
                keyboard: true
            }).css({
                width: 'auto',
                'margin-left': function () {
                    return -($(this).width() / 2);
                }
            });    
        });
      
       
    });
  </script>

   
    



          
        
    
  
