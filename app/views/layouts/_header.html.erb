<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
       <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
     <%= link_to logo, root_path , id: "logo" %> 
     <div class="nav-collapse">
        <ul class="nav pull-right">
          <li class="divider-vertical"></li>
          <li><%= link_to t(:pricing), pricing_path %></li>
          <li class="divider-vertical"></li>
          <li><%= link_to t(:principles), principles_path %></li>
          <li class="divider-vertical"></li>
          <% if signed_in? %>
          <li id="fat-menu" class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=t :account %><b class="caret"></b></a>
          <ul class="dropdown-menu">
          <li><%= link_to current_user do %>
          <i class="icon-user"></i>
          <%= t(:profile) %>
          <% end %></li>
          <li><%= link_to edit_user_path(current_user) do %>
          <i class="icon-cog"></i>
          <%= t(:settings) %>
          <% end %></li>
          <li class="divider"></li>
          <li><%= link_to t(:signout), signout_path, method: "delete" %></li>
          </ul>
          </li>
          <% else %>
          <li><%= link_to t(:signin), signin_path, :class => "sign-in" %></li>
          <% end %>
          <li class="divider-vertical"></li>
        </ul>
      </div>
    </div>
  </div>
</header>